= form_for @location, builder: BulmaFormBuilder::HorizontalBulmaFormBuilder do |f|
  = f.errors

  = f.labeled_text_field :name, placeholder: t('name.placeholder')
  = f.labeled_text_area :details
  = f.collection_check_boxes :feature_ids, Feature.all, :id, :name
  .actions
    = f.submit t(':save')

